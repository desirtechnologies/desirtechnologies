---
// Style object using tailwind-variants (for documentation/organization only)
import { tv } from 'tailwind-variants';

const styles = {
  container: tv({ base: 'w-full min-h-screen flex items-center justify-center bg-gradient-to-tr from-black via-gray-900 to-gray-800 py-16 px-4' }),
  grid: tv({ base: 'grid grid-cols-1 md:grid-cols-2 gap-8 w-full max-w-7xl mx-auto' }),
  left: tv({ base: 'flex flex-col justify-center gap-8' }),
  header: tv({ base: 'text-4xl md:text-5xl font-bold text-white mb-2' }),
  subheader: tv({ base: 'text-xl md:text-2xl text-gray-300 mb-4' }),
  cta: tv({ base: 'inline-block bg-primary-600 text-white px-6 py-3 rounded-lg shadow-md font-semibold hover:bg-primary-700 transition' }),
  typewriter: tv({ base: 'mt-4 text-lg md:text-xl text-primary-300 font-mono h-8' }),
  terminal: tv({ base: 'rounded-lg bg-gray-900 border border-gray-700 p-6 shadow-lg text-green-400 font-mono text-sm min-h-[260px] flex flex-col gap-2 relative overflow-x-auto' }),
  terminalHeader: tv({ base: 'flex items-center gap-2 mb-4' }),
  terminalDot: tv({ base: 'w-3 h-3 rounded-full' }),
  terminalTitle: tv({ base: 'ml-2 text-gray-200 font-semibold text-base' }),
  terminalLine: tv({ base: 'leading-relaxed' }),
  loading: tv({ base: 'inline-block animate-pulse text-yellow-300' })
};
---

<section class={styles.container()}>
  <div class={styles.grid()}>
    <!-- Left Column: Header, Subheader, CTA, Typewriter Placeholder -->
    <div class={styles.left()}>
      <h1 class={styles.header()}>
        Welcome to Desir Technology
      </h1>
      <div class={styles.subheader()}>
        Building innovative solutions for humanity.
      </div>
      <a href="#get-started" class={styles.cta()}>
        Get Started
      </a>
      <div class={styles.typewriter()}>
        <!-- Typewriter effect placeholder -->
        <span class="italic text-primary-400">I am a <span class="underline">{0}</span> to humanity.</span>
      </div>
    </div>

    <!-- Right Column: Terminal Window -->
    <div class={styles.terminal()} aria-label="terminal window">
      <div class={styles.terminalHeader()}>
        <span class={`${styles.terminalDot()} bg-red-400`}></span>
        <span class={`${styles.terminalDot()} bg-yellow-400`}></span>
        <span class={`${styles.terminalDot()} bg-green-400`}></span>
        <span class={styles.terminalTitle()}>desir@mach:~$</span>
      </div>
      <div class={styles.terminalLine()}>
        <span class="text-green-300">$</span> echo "Welcome, User!"
      </div>
      <div class={styles.terminalLine()}>
        Welcome to <span class="text-primary-400">Desir Technology</span> Docs
      </div>
      <div class={styles.terminalLine()}>
        <span class="text-green-300">$</span> cat version.txt
      </div>
      <div class={styles.terminalLine()}>
        v1.0.0 | mach-001
      </div>
      <div class={styles.terminalLine()}>
        <span class="text-green-300">$</span> ./jarveis --status
      </div>
      <div class={styles.terminalLine()}>
        <span class={styles.loading()}>Jarveis is loading...</span>
      </div>
    </div>
  </div>
</section>
