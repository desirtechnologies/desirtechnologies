
---

import { tv } from 'tailwind-variants';

const styles = {
  container: tv({ base: 'w-full border-t bg-background relative overflow-hidden' }),
  wrapper: tv({ base: 'container py-20 relative z-10' }),
  grid: tv({ base: 'grid grid-cols-1 md:grid-cols-12 gap-12 mb-20' }),
  company: tv({ base: 'md:col-span-5 space-y-8' }),
  logo: tv({ base: 'font-retro text-3xl bg-clip-text text-transparent bg-gradient-to-r from-primary via-primary/80 to-primary' }),
  socialRow: tv({ base: 'flex flex-wrap gap-4 pt-2' }),
  socialBtn: tv({ base: 'rounded-full h-12 w-12 flex items-center justify-center border border-primary/20 text-primary hover:bg-primary/10 hover:text-primary transition-all shadow-sm hover:shadow-md hover:shadow-primary/20' }),
  sectionHeader: tv({ base: 'font-medium text-xl flex items-center bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/70' }),
  contactList: tv({ base: 'space-y-4' }),
  contactItem: tv({ base: 'flex items-start space-x-3 group' }),
  contactIcon: tv({ base: 'h-10 w-10 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors' }),
  contactText: tv({ base: 'text-muted-foreground group-hover:text-foreground transition-colors pt-1.5' }),
  newsletterForm: tv({ base: 'space-y-4' }),
  newsletterInput: tv({ base: 'pr-12 py-6 rounded-full border-primary/20 focus:border-primary/50 text-base transition-colors' }),
  newsletterBtn: tv({ base: 'absolute right-1 top-1 h-10 w-10 rounded-full bg-gradient-to-r from-primary/80 to-primary hover:from-primary hover:to-primary/90 transition-all flex items-center justify-center' }),
  copyright: tv({ base: 'py-6' }),
  copyrightRow: tv({ base: 'flex flex-col sm:flex-row items-center justify-between gap-6' }),
  copyrightText: tv({ base: 'text-sm text-muted-foreground' }),
  copyrightDivider: tv({ base: 'hidden sm:block text-muted-foreground/30' }),
  copyrightDesign: tv({ base: 'text-xs text-muted-foreground/70' }),
  copyrightLinks: tv({ base: 'flex items-center flex-wrap justify-center gap-6 text-sm text-muted-foreground' })
};
---

<footer class={styles.container()}>
  <!-- Gradient overlay for visual depth -->
  <div class="absolute inset-0 bg-gradient-to-b from-background/0 via-background/70 to-background pointer-events-none"></div>
  <div class={styles.wrapper()}>
    <div class={styles.grid()}>
      <!-- Company Info Section -->
      <div class={styles.company()}>
        <a href="/" class="inline-block mb-2 group">
          <span class={styles.logo()}>Desir Technologies</span>
        </a>
        <p class="text-base leading-relaxed text-muted-foreground max-w-md">
          Empowering businesses with innovative technology solutions to drive growth and success. We specialize in web development, mobile apps, cloud solutions, and IT consulting.
        </p>
        <div class={styles.socialRow()}>
          <!-- Social icons as inline SVGs -->
          <a href="https://twitter.com" target="_blank" aria-label="Twitter" class={styles.socialBtn()}>
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 19c11 0 14-9 14-14v-1A10.5 10.5 0 0024 2s-2.5 1-4 1c-1.5-1.5-4-1-5 1C8 7 7 10 7 12c0 2 1 4 3 5z" /></svg>
          </a>
          <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn" class={styles.socialBtn()}>
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5"><circle cx="12" cy="12" r="10" /><rect x="8" y="11" width="2" height="5" /><rect x="14" y="11" width="2" height="5" /></svg>
          </a>
          <a href="https://github.com" target="_blank" aria-label="GitHub" class={styles.socialBtn()}>
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.17 6.84 9.49.5.09.66-.22.66-.48 0-.24-.01-.87-.01-1.71-2.78.61-3.37-1.34-3.37-1.34-.45-1.15-1.1-1.46-1.1-1.46-.9-.62.07-.61.07-.61 1 .07 1.53 1.02 1.53 1.02.89 1.53 2.34 1.09 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.56-1.11-4.56-4.95 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.56 9.56 0 0112 6.8c.85.004 1.71.115 2.51.337 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.85-2.34 4.7-4.57 4.95.36.31.68.92.68 1.85 0 1.33-.01 2.41-.01 2.74 0 .26.16.58.67.48C19.13 20.17 22 16.42 22 12c0-5.52-4.48-10-10-10z" /></svg>
          </a>
          <a href="https://instagram.com" target="_blank" aria-label="Instagram" class={styles.socialBtn()}>
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5"><rect x="2" y="2" width="20" height="20" rx="5" /><circle cx="12" cy="12" r="5" /><circle cx="17" cy="7" r="1.5" /></svg>
          </a>
          <a href="https://facebook.com" target="_blank" aria-label="Facebook" class={styles.socialBtn()}>
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5"><path d="M18 2h-3a5 5 0 00-5 5v3H6v4h4v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" /></svg>
          </a>
        </div>
      </div>
      <!-- Contact & Newsletter (static, no JS) -->
      <div class="md:col-span-7 grid grid-cols-1 sm:grid-cols-2 gap-8">
        <div class="space-y-6">
          <h3 class={styles.sectionHeader()}><svg class="h-5 w-5 mr-2 text-primary inline" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12c0 5.52 4.48 10 10 10s10-4.48 10-10C22 6.48 17.52 2 12 2z" /></svg>Contact Us</h3>
          <div class={styles.contactList()}>
            <div class={styles.contactItem()}>
              <div class={styles.contactIcon()}><svg class="h-5 w-5 text-primary/70" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M17.657 16.657L13.414 12.414a4 4 0 10-5.657 5.657l4.243 4.243a8 8 0 1011.314-11.314l-4.243-4.243a4 4 0 10-5.657 5.657l4.243 4.243z" /></svg></div>
              <span class={styles.contactText()}>
                123 Tech Avenue<br />San Francisco, CA 94107
              </span>
            </div>
            <div class={styles.contactItem()}>
              <div class={styles.contactIcon()}><svg class="h-5 w-5 text-primary/70" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-9 4v8m-4 0h8" /></svg></div>
              <a href="tel:+15551234567" class={styles.contactText()}>+1 (555) 123-4567</a>
            </div>
            <div class={styles.contactItem()}>
              <div class={styles.contactIcon()}><svg class="h-5 w-5 text-primary/70" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M16 12a4 4 0 01-8 0" /></svg></div>
              <a href="mailto:info@desirtechnologies.com" class={styles.contactText()}>info@desirtechnologies.com</a>
            </div>
            <div class={styles.contactItem()}>
              <div class={styles.contactIcon()}><svg class="h-5 w-5 text-primary/70" fill="none" viewBox="0 0 24 24" stroke="currentColor"><circle cx="12" cy="12" r="10" /><path d="M12 6v6l4 2" /></svg></div>
              <span class={styles.contactText()}>Mon-Fri: 9AM-6PM (PST)</span>
            </div>
          </div>
        </div>
        <div class="space-y-6">
          <h3 class={styles.sectionHeader()}><svg class="h-5 w-5 mr-2 text-primary inline" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M16 12a4 4 0 01-8 0" /></svg>Newsletter</h3>
          <div>
            <p class="text-muted-foreground mb-4 leading-relaxed">Stay updated with our latest news, articles, and special offers.</p>
            <form class={styles.newsletterForm()}>
              <div class="relative group">
                <input type="email" placeholder="Enter your email" class={styles.newsletterInput()} required />
                <button type="submit" class={styles.newsletterBtn()} aria-label="Subscribe">
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M5 13l4 4L19 7" /></svg>
                </button>
              </div>
              <p class="text-xs text-muted-foreground">We respect your privacy. Unsubscribe at any time.</p>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="relative">
      <hr class="mb-20 opacity-30 border-t border-gray-700" />
      <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-background px-4">
        <div class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center">
          <div class="w-3 h-3 rounded-full bg-primary/30"></div>
        </div>
      </div>
    </div>
    <!-- Copyright Section -->
    <div class={styles.copyright()}>
      <div class={styles.copyrightRow()}>
        <div class="flex flex-col sm:flex-row items-center gap-4">
          <p class={styles.copyrightText()}>&copy; 2025 Desir Technologies. All rights reserved.</p>
          <div class={styles.copyrightDivider()}>|</div>
          <p class={styles.copyrightDesign()}>Designed with <span class="text-red-400">â™¥</span> in San Francisco</p>
        </div>
        <div class={styles.copyrightLinks()}>
          <a href="/privacy" class="hover:text-foreground transition-colors hover:underline">Privacy Policy</a>
          <a href="/terms" class="hover:text-foreground transition-colors hover:underline">Terms of Service</a>
          <a href="/sitemap" class="hover:text-foreground transition-colors hover:underline">Sitemap</a>
          <a href="/contact" class="hover:text-foreground transition-colors hover:underline">Contact Us</a>
        </div>
      </div>
    </div>
  </div>
</footer>