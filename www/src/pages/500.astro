---
import Layout from "@/views/Layout.astro";
import { getPageData } from "@/routes/rotas";

// Get the error route data
const { meta } = await getPageData("/500");
---

<Layout title="Server Error" description="An error occurred on our server">
  <div class="error-page">
    <h1>500</h1>
    <h2>Server Error</h2>
    <p>Something went wrong on our servers. We're working to fix the issue.</p>
    <a href="/" class="home-link">Go to Homepage</a>
  </div>
</Layout>

<style>
  .error-page {
    text-align: center;
    padding: 3rem 1rem;
  }
  
  h1 {
    font-size: 6rem;
    margin: 0;
    color: #fee2e2;
  }
  
  h2 {
    font-size: 2rem;
    margin: 0 0 1.5rem;
    color: #b91c1c;
  }
  
  p {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 500px;
    margin: 0 auto 2rem;
  }
  
  .home-link {
    display: inline-block;
    background-color: #3b82f6;
    color: white;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.25rem;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }
  
  .home-link:hover {
    background-color: #2563eb;
  }
</style>
